<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TodoBody" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?label_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="DoneBody" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?label_tertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?label_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="BigTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?label_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TitleSmall" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?label_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="FabShapeCircle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="CalendarStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">?label_primary</item>
        <item name="android:textColorSecondary">?label_primary</item>
        <item name="android:textColorPrimaryInverse">?color_white</item>
        <item name="android:textColorSecondaryInverse">?color_white</item>
        <item name="colorAccent">?color_blue</item>
        <item name="colorSecondary">?color_blue</item>
        <item name="colorControlActivated">?color_blue</item>
        <item name="colorControlHighlight">?color_blue</item>
        <item name="android:windowBackground">?back_secondary</item>
        <item name="android:textColor">?color_white</item>
        <item name="android:colorPrimary">?color_blue</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton
        </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?color_blue</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?back_secondary</item>
        <item name="background">?back_secondary</item>
        <item name="android:textColor">?label_primary</item>
    </style>

    <style name="CollapsedTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>